<div class="row">
  <div class="large-8 column">
    <% @posts.each do |post| %>
      <div class="row post__wrapper">
        <% if post.photo.present? %>
          <div class="large-4 columns">
            <%= image_tag post.photo.url %>
          </div>
        <% end %>
        <div class="large-8 columns">
          <h2 class="title"><%= link_to post.title, post %></h2>
          <small class="date"><%= post.created_at.strftime("%B %d, %Y") %></small>
          <p>
            <%= truncate(post.body, length: 600) %>
          </p>
          <button class="button"><%= link_to "Continue Reading", post %></button>
        </div>
      </div>
    <% end %>
  </div>
  <div class="large-4 column">
    <h2>Favourite Posts</h2>
    <% @posts.each do |post| %>
      <% if post.popular_post %>
        <strong><%= link_to post.title, post %></strong>
        <small class="date"><%= post.created_at.strftime("%B %d, %Y") %></small>
      <% end %>
    <% end %>
    <div class="divider">
    </div>
  </div>
</div>
